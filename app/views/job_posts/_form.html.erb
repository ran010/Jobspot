<section class="job-bg user-page">
  <div class="container">
    <div class="row text-center">
      <!-- user-login -->
      <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">


<%= form_for @job_post do |f| %>
  <% if job_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job_post.errors.count, "error") %> prohibited this job_post from being saved:</h2>

      <ul>
      <% job_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      
      </ul>
    </div>
  <% end %>


  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="find-job">
      <div class="form-group">
        <%= f.label :job_title %><br />
        <%= f.text_field :job_title,class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :no_of_vacancies %><br />
        <%= f.text_field :no_of_vacancies,class:"form-control" %>
      </div>
      <div class="field">
        <%= f.label :experience %><br />
        <%= f.text_field :experience,class:"form-control" %>
      </div>
      <h1>Education</h1>

          <%= f.fields_for :seeker_educations do |ff| %>
          <%= render 'shared/educations', f: ff %>

          <% end %>

      <h1>Category</h1>

          <%= f.fields_for :seeker_category do |ff| %>
            <%= render 'shared/category', f: ff %>
            <h1>Skills</h1>
              <%= f.fields_for :seeker_skills do |ff| %>
                <%= render 'shared/skills', f: ff %>

              <% end %>
          <% end %>
      <div class="form-group">
        <%= f.label :deadline %><br />
        <%= f.text_field :deadline,class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :job_type %><br />
        <%= f.text_field :job_type,class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br />
        <%= f.cktext_area :description,class:"form-control" %>
      </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div><!-- user-login -->
</div><!-- row -->
</div><!-- container -->
</section><!-- signup-page -->
